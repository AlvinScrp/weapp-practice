<!--miniprogram/pages/new-address/index.wxml-->

<van-cell-group>
  <van-field model:value="{{ user_name }}" placeholder="收货人" clearable label="收货人" border="{{ false }}" />
  <van-field model:value="{{ tel_number }}" type="number" placeholder="手机号" clearable label="手机号"
    border="{{ false }}" />
  <van-cell>
    <view slot="title">
      <picker mode="region" bindchange="bindRegionChange" value="{{region}}" custom-item="全部">
        <view class="picker">
          <text style="padding-right:55px;">省市区</text>
          {{region[0]}}，{{region[1]}}，{{region[2]}}
        </view>
      </picker>
    </view>
  </van-cell>
  <van-field model:value="{{ detail_info }}" placeholder="详细地址" clearable label="详细地址" border="{{ false }}" />
</van-cell-group>

<view style="padding:20px 15px">
  <van-button type="primary" size="large">保存并使用</van-button>

</view>