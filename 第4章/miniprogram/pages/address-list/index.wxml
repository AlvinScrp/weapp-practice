<van-cell-group>
  <van-cell bind:click="getAddressFromWeixin" is-link title="获取微信收货地址" border="{{ false }}">
    <van-icon style="padding-right:10px;" color="green" slot="icon" name="chat-o" />
  </van-cell>
</van-cell-group>

<van-radio-group value="{{ selectedAddressId }}" bind:change="onAddressIdChange">
  <van-cell-group>
    <block wx:for="{{addressList}}" wx:key="id">
      <van-cell use-label-slot>
        <view class="vertical-align" slot="icon">
          <van-radio size="17px" name="{{item.id}}"></van-radio>
        </view>
        <view slot="title">
          {{item.user_name}}，{{item.tel_number}}
        </view>
        <view slot="label">
          快递地址：{{item.address_info}}
        </view>
        <van-icon slot="right-icon" name="edit" />
      </van-cell>
    </block>
  </van-cell-group>

</van-radio-group>

<van-button custom-class="new-address" type="primary" size="large">新增收货地址</van-button>